<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context="com.rajarshisharma.popularmoviesstage1.DetailActivityFragment"
    android:id="@+id/detail_view_scroll_view">
    <LinearLayout android:id="@+id/detail_view_linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/movie_title"
            android:text="Dirty Harry part 1"
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:background="#008080"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/movie_title_text_size"
            android:paddingTop="@dimen/movie_title_padding_top"
            android:paddingLeft="@dimen/movie_title_padding_left"
            android:layout_alignParentTop="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detail_view_rel_layout">

            <ImageView
                android:id="@+id/movie_poster_detail"
                android:layout_width="@dimen/movie_poster_width"
                android:layout_height="@dimen/movie_poster_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/poster"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:textSize="25sp"
                android:text="Release Date"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Average"
                android:textSize="@dimen/vote_avg_txt_size"
                android:paddingRight="@dimen/vote_avg_padding_right"
                android:layout_below="@id/release_date"
                android:layout_alignRight="@+id/release_date"
                android:layout_alignEnd="@+id/release_date" />
        </RelativeLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_toRightOf="@+id/movie_poster"
            android:id="@+id/movie_desc"
            android:text="Long Movie Description Lorem Ipsum blah blah blah"
            android:textSize="@dimen/movie_desc_text_size"
            android:layout_gravity="bottom"
            android:padding="@dimen/detail_view_desc_padding"/>

    </LinearLayout>
</ScrollView>